<Page x:Class="WpfApp.Rehabilitation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rehabilitation" FontSize="18">

    <Grid Background="DarkKhaki">
        <Label Content="Heal:" HorizontalAlignment="Left" Margin="70,30,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="HealComboBox" Margin="70,65,70,0" VerticalAlignment="Top"/>
        <Button Click="HealAnimalClick" Content="Heal" Margin="0,100,70,0" VerticalAlignment="Top" Height="40" HorizontalAlignment="Right" Width="150"/>

        <Label Content="Remove:" HorizontalAlignment="Left" Margin="70,160,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="RemoveComboBox" Margin="70,195,70,0" VerticalAlignment="Top"/>
        <Button Click="RemoveAnimalClick" Content="Remove" Margin="0,230,70,0" VerticalAlignment="Top" Height="40" HorizontalAlignment="Right" Width="150"/>
    </Grid>
</Page>
